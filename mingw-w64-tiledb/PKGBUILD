# Maintainer: Isaiah Norton <isaiah@tiledb.com>
# Maintainer: Seth Shelnutt <seth@tiledb.com>
# Maintainer: Dirk Eddelbuettel <dirk@tiledb.com>
echo "nop"

_realname=tiledb
pkgbase=mingw-w64-${_realname}
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
# Comment this out and use pkgver() commented function below for release candidates
pkgver=2.1.0
pkgsuffix="-rc5" # use for "-rc1" to avoid build error
pkgrel=2
pkgdesc="Storage management library for sparse and dense array data (mingw-w64)"
arch=("any")
url="https://tiledb.com/"
license=("MIT")
depends=("${MINGW_PACKAGE_PREFIX}-aws-sdk-cpp"
         "${MINGW_PACKAGE_PREFIX}-lz4"
         "${MINGW_PACKAGE_PREFIX}-bzip2"
         "${MINGW_PACKAGE_PREFIX}-zlib"
         "${MINGW_PACKAGE_PREFIX}-zstd")
makedepends=("${MINGW_PACKAGE_PREFIX}-cmake"
             "${MINGW_PACKAGE_PREFIX}-gcc"
             "${MINGW_PACKAGE_PREFIX}-curl"
             "${MINGW_PACKAGE_PREFIX}-binutils")
options=("staticlibs" "strip")

#source=(${_realname}-${pkgver}${pkgsuffix}.tar.gz::"https://github.com/TileDB-Inc/TileDB/archive/${pkgver}${pkgsuffix}.tar.gz")
#sha256sums=("7921661696f3de36c0a7a093d8c637f3223fe0e6071b327e7f899fb9b3e58e5d")

# switch to git due to bug (?) in build system default tar: fails to un-tar the archive
source=('{_realnam}-{pkgver}::git+https://github.com/TileDB-Inc/TileDB#2.1.0')
noextract=(${_realname}-${pkgver}${pkgsuffix}.tar.gz)

prepare() {
  echo "SOURCE DIR is: ${srcdir}"
  #MSYS="winsymlinks:lnk" tar -xf ${srcdir}/${_realname}-${pkgver}${pkgsuffix}.tar.gz
}

build() {
  [[ -d ${srcdir}/build-${MINGW_CHOST} ]] && rm -rf ${srcdir}/build-${MINGW_CHOST}
  mkdir -p ${srcdir}/build-${MINGW_CHOST} && cd ${srcdir}/build-${MINGW_CHOST}

  if [ "$CARCH" == "i686" ]; then
  export CFLAGS="-mfpmath=sse -msse2"
  export CXXFLAGS="-mfpmath=sse -msse2"
  fi

  # work around for: https://github.com/msys2/MINGW-packages/issues/6986
  # see also: https://github.com/msys2/MINGW-packages/issues/7023
  #export LDFLAGS="-Wl,--default-image-base-low"

  # try to work around https://github.com/msys2/MINGW-packages/issues/6986
  # - dep on binutils above
  # - set the mingw prefix first here to prefer ld
  export PATH=${MINGW_PREFIX}/bin:$PATH

  export MSYS2_ARG_CONV_EXCL="-DCMAKE_INSTALL_PREFIX="
  ${MINGW_PREFIX}/bin/cmake.exe \
    -G"MSYS Makefiles" \
    -DCMAKE_INSTALL_PREFIX=${MINGW_PREFIX} \
    -DBUILD_SHARED_LIBS=OFF \
    -DCMAKE_BUILD_TYPE=Release \
    -DTILEDB_STATIC=ON \
    -DTILEDB_TBB=OFF \
    -DTILEDB_S3=ON \
    ${srcdir}
  #  ../${_realname}-${pkgver}${pkgsuffix}
  make
  make -C tiledb
}

package() {
  cd ${srcdir}/build-${MINGW_CHOST}
  make  DESTDIR="${pkgdir}" -C tiledb install
  rm -Rf "${pkgdir}${MINGW_PREFIX}/bin"
  rm  "${pkgdir}${MINGW_PREFIX}/lib/libtiledb.dll.a"
}

check (){
  cd ${srcdir}/build-${MINGW_CHOST}
  #make check
}
